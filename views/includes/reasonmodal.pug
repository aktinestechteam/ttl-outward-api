// Modal Add Category
#inwardcargo-void-reason-modal.modal.fade.none-border
	.modal-dialog
		.modal-content
				.modal-header
					h4.modal-title
						i#inwardcargo-void-reason-title
					button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
				.modal-body
					.row
						.col-lg-12
							label.control-label Select Reason
							select#inwardcargo_voidreason_reason_select.select2.form-control.custom-select(style='width: 100%; height:36px;', type='text', name='inwardcargo_voidreason_reason_select')
								
						.col-lg-12
							label.control-label Reason Explanation
							input#inwardcargo_voidreason_explanation_reason_input.form-control.form-white(placeholder='Enter Reason Explanation', type='text', name='inwardcargo_voidreason_explanation_reason_input')
				.modal-footer
					button#inwardcargo_void_id.btn.btn-danger.waves-effect.waves-light.save-category(type='button', onclick='performVoid()') Save
					button.btn.btn-secondary.waves-effect(type='button', data-dismiss='modal', aria-hidden='true') Close
		// END MODAL